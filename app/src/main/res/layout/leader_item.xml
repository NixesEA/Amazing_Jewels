<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/leader_card"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/shop_card_bg"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <TextView
        android:id="@+id/leader_name_tv"
        android:text="1.AnGeL"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/leader_card"
        app:layout_constraintBottom_toBottomOf="@id/leader_card"
        app:layout_constraintStart_toStartOf="@id/leader_card"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/leader_ic_score"
        android:src="@drawable/icn_coin_sm"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/leader_card"
        app:layout_constraintBottom_toBottomOf="@id/leader_card"
        app:layout_constraintEnd_toEndOf="@id/leader_card"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/leader_score_tv"
        android:text="5000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/leader_ic_score"
        app:layout_constraintBottom_toBottomOf="@id/leader_ic_score"
        app:layout_constraintEnd_toStartOf="@id/leader_ic_score"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>